
<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-courses">
                <a href="/courses/{{this.slug}}">
                   <img src="{{this.image}}" alt="{{this.name}}" class="card-img-top">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/courses/{{this.slug}}" class="btn btn-primary">Tham gia</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>